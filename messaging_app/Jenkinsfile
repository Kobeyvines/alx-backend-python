pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Kobeyvines/alx-backend-python.git'
            }
        }

       stage('Install Dependencies') {
    steps {
        sh '''
        cd messaging_app
        python3 -m pip install --upgrade pip
        pip3 install -r requirements.txt
        pip3 install pytest pytest-cov
        '''
    }
}


        stage('Run Tests') {
    steps {
        sh '''
        cd messaging_app
        pytest --junitxml=results.xml || true
        '''
    }
}

    }

    post {
    always {
        junit 'messaging_app/results.xml'
        archiveArtifacts artifacts: 'messaging_app/results.xml', fingerprint: true
    }
}

}
